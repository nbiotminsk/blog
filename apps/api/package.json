{
  "name": "@nikolai/api",
  "version": "0.1.0",
  "description": "Express and TypeScript backend service for Nikolai",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "migrate": "node -r ts-node/register ./node_modules/knex/bin/cli.js migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "node -r ts-node/register ./node_modules/knex/bin/cli.js migrate:rollback --knexfile knexfile.ts",
    "migrate:status": "node -r ts-node/register ./node_modules/knex/bin/cli.js migrate:status --knexfile knexfile.ts",
    "seed": "node -r ts-node/register ./node_modules/knex/bin/cli.js seed:run --knexfile knexfile.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "knex",
    "postgres"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.30",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
